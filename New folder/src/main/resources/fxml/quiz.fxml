<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" styleClass="quiz-container" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aicareeradvisor.ui.controller.QuizController">
   <children>
      <VBox alignment="CENTER" spacing="10">
         <children>
            <Label styleClass="app-title" text="Career Assessment Quiz" />
            <Label styleClass="app-subtitle" text="Discover your ideal career path" />
         </children>
      </VBox>
      
      <VBox alignment="CENTER" spacing="15" styleClass="quiz-content">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Label fx:id="questionNumberLabel" styleClass="question-number" text="Question 1 of 8" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ProgressBar fx:id="progressBar" prefWidth="200.0" />
               </children>
            </HBox>
            
            <VBox alignment="CENTER" spacing="20" styleClass="question-section">
               <children>
                  <Label fx:id="questionLabel" styleClass="question-text" text="How do you prefer to spend your free time?" wrapText="true" />
                  
                  <VBox fx:id="answerOptionsVBox" alignment="CENTER_LEFT" spacing="10" styleClass="answer-options">
                     <children>
                        <RadioButton text="Reading and learning new things" />
                        <RadioButton text="Socializing with friends" />
                        <RadioButton text="Working on creative projects" />
                        <RadioButton text="Solving puzzles and problems" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <HBox alignment="CENTER" spacing="20">
               <children>
                  <Button fx:id="previousButton" onAction="#handlePrevious" styleClass="secondary-button" text="Previous" />
                  <Button fx:id="nextButton" onAction="#handleNext" styleClass="primary-button" text="Next" />
                  <Button fx:id="submitButton" onAction="#handleSubmit" styleClass="primary-button" text="Submit Quiz" visible="false" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <VBox alignment="CENTER" spacing="5">
         <children>
            <Label styleClass="footer-text" text="Answer honestly for the best results" />
            <Label styleClass="footer-text" text="Your answers help us match you with the perfect career" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
</VBox>
